<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoandVideo"
    android:background="@color/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_vertical"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/back2"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/panila"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hashan Pannila"
                        android:textColor="@color/colorAccent"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/back2"
                android:layout_margin="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/smart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Photography"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="18dp"/>
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/back2"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/studio3000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio 3000DF"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/back2"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/wasthi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wasthi Production"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/back2"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/studionethma"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio Nethma"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/back2"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/che"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Che Studio"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
        </GridLayout>

    </LinearLayout>

</ScrollView>